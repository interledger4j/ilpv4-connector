<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="payments" author="nkramer">
    <createTable tableName="INVOICE_PAYMENTS">
      <column name="ID" autoIncrement="true" type="BIGINT">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="INVOICE_PRIMARY_KEY" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="CORRELATION_ID" type="VARCHAR(64)">
        <constraints nullable="false"/>
      </column>
      <column name="PAYMENT_ID" type="VARCHAR(64)">
        <constraints nullable="false"/>
      </column>
      <column name="SOURCE_ADDRESS" type="VARCHAR(2000)">
        <constraints nullable="false"/>
      </column>
      <column name="DESTINATION_ADDRESS" type="VARCHAR(2000)">
        <constraints nullable="false"/>
      </column>
      <column name="AMOUNT" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="ASSET_CODE" type="VARCHAR(20)">
        <constraints nullable="false"/>
      </column>
      <column name="ASSET_SCALE" type="SMALLINT">
        <constraints nullable="false"/>
      </column>
      <column name="CREATED_DTTM" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="MODIFIED_DTTM" type="DATETIME">
        <constraints nullable="false"/>
      </column>
      <column name="VERSION" type="SMALLINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createIndex tableName="INVOICE_PAYMENTS"
                 indexName="PAYMENTS_ID_IDX">
      <column name="PAYMENT_ID"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
