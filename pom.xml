  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.0.3.RELEASE</version>
  </parent>

  <groupId>com.sappenin.ilpv4</groupId>
  <artifactId>ilpv4-connector</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>ILPv4 :: Parent</name>
  <description>The parent pom for this ILPv4 Connector.</description>

  <properties>
    <!-- By default, we run in production mode, unless a different profile is specified. -->
    <activeProfile>production</activeProfile>
    <java.version>1.8</java.version>
    <ilp.version>0.15.0-SNAPSHOT</ilp.version>
    <ilp-plugin.version>2.0.0-SNAPSHOT</ilp-plugin.version>

    <grpc.version>1.16.1</grpc.version>
    <protobuf.maven.plugin.version>0.6.1</protobuf.maven.plugin.version>
    <protoc.version>3.6.1</protoc.version>
    <protoc.gen.grpc.java.version>1.16.1</protoc.gen.grpc.java.version>
  </properties>

  <modules>
    <module>ilpv4-api</module>
    <module>ilpv4-connector-proto</module>
    <module>ilpv4-connector-model</module>
    <module>ilpv4-connector-routing-api</module>
    <module>ilpv4-connector-service-api</module>
    <module>ilpv4-connector-routing-impl</module>
    <module>ilpv4-connector-service-impl</module>
    <module>ilpv4-connector-server</module>
