<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>ilpv4-connector</artifactId>
    <groupId>com.sappenin.ilpv4</groupId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>

  <artifactId>ilpv4-connector-it</artifactId>
  <name>ILPv4 :: Connector :: Integration Tests</name>
  <description>Integration Tests for the ILPv4 Connectors.</description>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-accounts</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-link</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-model</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sappenin.ilpv4</groupId>
      <artifactId>ilpv4-connector-routing-api</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-persistence</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-link-blast</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-service-api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.sappenin.ilpv4</groupId>
      <artifactId>ilpv4-connector-service-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ilpv4-connector-server</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>com.squareup.okhttp3</groupId>
      <artifactId>okhttp</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.money</groupId>
      <artifactId>money-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-core</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.interledger</groupId>
      <artifactId>ilp-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <!-- Actually runs Integration Tests (use -DskipITs to skip) -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <id>run-integration-tests</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <skipTests>${skipTests}</skipTests>
              <skipITs>${skipITs}</skipITs>
              <useSystemClassLoader>false</useSystemClassLoader>
              <includes>
                <include>**/*TestSuite.java</include>
              </includes>
              <encoding>UTF-8</encoding>
              <!-- see: https://stackoverflow.com/questions/53010200/maven-surefire-could-not-find-forkedbooter-class -->
              <argLine>-Djdk.net.URLClassPath.disableClassPathURLCheck=true</argLine>
              <useSystemClassLoader>false</useSystemClassLoader>
              <!-- By default, don't run the Settlement ITs because it requires a Settlement Engine to
               be running, which may not be the case on a developer laptop. Note that this value is overridden in the
               CI build. Likewise for Performance. -->
              <groups>
                org.interledger.ilpv4.connector.it.markers.IlpOverHttp,
                org.interledger.ilpv4.connector.it.markers.Performance
              </groups>
              <excludedGroups>
                org.interledger.ilpv4.connector.it.markers.Settlement,
              </excludedGroups>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>performance</id>
      <build>
        <plugins>
          <!-- Actually runs Integration Tests (use -DskipITs to skip) -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <id>run-integration-tests</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <skipTests>${skipTests}</skipTests>
              <skipITs>${skipITs}</skipITs>
              <useSystemClassLoader>false</useSystemClassLoader>
              <includes>
                <include>**/*TestSuite.java</include>
              </includes>
              <encoding>UTF-8</encoding>
              <!-- see: https://stackoverflow.com/questions/53010200/maven-surefire-could-not-find-forkedbooter-class -->
              <argLine>-Djdk.net.URLClassPath.disableClassPathURLCheck=true</argLine>
              <useSystemClassLoader>false</useSystemClassLoader>
              <groups>
                org.interledger.ilpv4.connector.it.markers.Performance
              </groups>
<!--              <threadCount>1</threadCount>-->
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>settlement</id>
      <build>
        <plugins>
          <!-- Actually runs Integration Tests (use -DskipITs to skip) -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <id>run-integration-tests</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <skipTests>${skipTests}</skipTests>
              <skipITs>${skipITs}</skipITs>
              <useSystemClassLoader>false</useSystemClassLoader>
              <encoding>UTF-8</encoding>
              <!-- see: https://stackoverflow.com/questions/53010200/maven-surefire-could-not-find-forkedbooter-class -->
              <argLine>-Djdk.net.URLClassPath.disableClassPathURLCheck=true</argLine>
              <useSystemClassLoader>false</useSystemClassLoader>
              <groups>
                org.interledger.ilpv4.connector.it.markers.Settlement
              </groups>
              <excludedGroups>
                org.interledger.ilpv4.connector.it.markers.IlpOverHttp,
                org.interledger.ilpv4.connector.it.markers.Performance
              </excludedGroups>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
